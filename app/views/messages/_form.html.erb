<%= form_for(@message) do |f| %>

  
<% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
 <div class="form-group">
   <%= f.label :name, "名前：", :class =>"control-label col-md-2" %>
   <div class="col-md-8">
     <%= f.text_field :name, :class => "form-control" %>
   </div>
 </div>
 <div class="form-group">
   <%= f.label :age, "年齢：", :class =>"control-label col-md-2" %>
   <div class="col-md-8">
     <%= f.text_field :age, :class => "form-control" %>
   </div>
 </div>
 <div class="form-group">
   <%= f.label :body, "内容：", :class =>"control-label col-md-2" %>
   <div class="col-md-8">
     <%= f.text_area :body, :class => "form-control" %>
   </div>
 </div>

  
<%= f.submit class: "btn btn-sm btn-primary" %>